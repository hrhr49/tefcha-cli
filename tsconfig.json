{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "outDir": "bin",
        "lib": [
            "es6",
            "dom",
            "esnext"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
